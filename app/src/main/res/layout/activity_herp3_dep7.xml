<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.momen.test.herp3_dep7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="26dp"
                android:text="المرمريه"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/herp43"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"

                android:text="
يستخدم عشب الميرمية لعلاج آلام والتهاب الحلق، فقد أثبتت بعض الأعشاب فائدتها لعلاج حالات احتقان الحلق ، ومن تلك الأعشاب الدردار الزلق والزعتر وبراعم الحور، ومن الخلطات الشعبية المعروفة، خلط كميات متساوية من الميرمية والزعتر البري وبراعم الحور حيث يتم سحقها ووضع قدر ملعقة كبيرة في كوب من الماء المغلي وتركها لمدة عشرة دقائق ثم الغرغرة بحيث يكون الرأس مائلا إلى الخلف،و من الأعشاب والمواد الطبيعية الأخرى ذات الفائدة لعلاج ألام الحلق أيضا، حشيشة القنفذ والنعناع والزنجبيل ."
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="16dp"
                android:textAllCaps="false"
                android:clickable="true"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="قيم مدى أهميه المعلومات لك..!"
                android:onClick="but_33"
                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
