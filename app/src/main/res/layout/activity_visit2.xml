<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/milk"
    tools:context="com.example.momen.test.visit2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="نوع العلاج"
                android:id="@+id/textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="32dp"
                android:textStyle="bold"
                android:ems="10"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#f7f0f0"
                android:textColorHighlight="@android:color/darker_gray"
                android:textColorHint="@color/white"
                android:textSize="22sp"/>
            <Button
                android:id="@+id/medical"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:background="@drawable/medicall"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="Butt_medical"
                android:layout_gravity="center_vertical"
                android:padding="14dp"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/herps"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/herball"
                android:clickable="true"
                android:textSize="20dp"
                android:textStyle="bold"
                android:onClick="Butt_herp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:padding="14dp"
                android:textAllCaps="false" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>
